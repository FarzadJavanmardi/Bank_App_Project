<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanchedAlmond"
    android:foregroundTint="#907DB3"
    tools:context=".TransactionsActivity">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.05"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/dollarpic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-73dp"
        tools:layout_editor_absoluteY="-65dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblViewAccountNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/txtDeposit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Deposit amount to this account "
                android:textColorHint="#555555"
                android:inputType="number"
                android:maxLines="1"
                android:text=""
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnDeposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/cardview_dark_background"
                android:text="Deposit" />

            <EditText
                android:id="@+id/txtAmountForTransfer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:gravity="center"
                android:hint="The amount that you want to send"
                android:textColorHint="#555555"
                android:inputType="number"
                android:maxLines="1"
                android:text=""
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtDesAccNum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Destination account number "
               android:textColorHint="#555555"
                android:inputType="number"
                android:maxLines="1"
                android:text=""
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnTransfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/cardview_dark_background"
                android:text="Transfer" />

            <EditText
                android:id="@+id/txtWithdraw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:gravity="center"
                android:hint="To Withdraw money "
                android:textColorHint="#555555"
                android:inputType="number"
                android:maxLines="1"
                android:text=""
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnWithdraw"
                android:backgroundTint="@color/cardview_dark_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Withdraw" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
